# ALT compatibility on other platforms (Debian based)

%post_service() \
	test -x /usr/sbin/update-rc.d && update-rc.d %1 start 20 2 3 4 5 S . stop 20 0 1 6 . || : \
	%_initdir/%1 condrestart || : \
%nil

%preun_service() \
	%_initdir/%1 condstop || : \
	test -x /usr/sbin/update-rc.d && update-rc.d -f %1 remove || : \
%nil

